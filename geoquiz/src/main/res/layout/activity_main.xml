<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/activity_main_text_question"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_question_height"
        android:gravity="center"
        android:padding="@dimen/text_padding"
        tools:text="@string/activity_main_text_question_text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_main_button_true"
            style="?android:attr/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/button_margin_horizontal"
            android:text="@string/activity_main_button_true_text" />

        <Button
            android:id="@+id/activity_main_button_false"
            style="?android:attr/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/button_margin_horizontal"
            android:text="@string/activity_main_button_false_text" />

    </LinearLayout>

    <Button
        android:id="@+id/activity_main_button_cheat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin"
        android:text="@string/activity_main_button_cheat_text" />

    <TextView
        android:id="@+id/activity_main_text_number_of_hints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hints used: 2 out of 3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/activity_main_button_previous"
            style="?android:attr/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/button_margin_horizontal"
            android:contentDescription="@string/activity_main_button_previous_text"
            android:src="@drawable/arrow_left" />

        <ImageButton
            android:id="@+id/activity_main_button_next"
            style="?android:attr/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/button_margin_horizontal"
            android:contentDescription="@string/activity_main_button_next_text"
            android:src="@drawable/arrow_right" />

    </LinearLayout>

</LinearLayout>
